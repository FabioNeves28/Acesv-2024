@model Acesv.Models.Dados

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dados</h4>
<hr />
<style>
    .multiselect {
        width: 200px;
    }

    .selectBox {
        position: relative;
    }

        .selectBox select {
            width: 100%;
            font-weight: bold;
        }

    .overSelect {
        position: absolute;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
    }

    #checkboxes {
        display: none;
        border: 1px #dadada solid;
    }

        #checkboxes label {
            display: block;
        }

            #checkboxes label:hover {
                background-color: #1e90ff;
            }

    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    .slider-text {
        position: absolute;
        display: block;
        width: 60px;
        text-align: center;
        line-height: 34px;
        color: white;
        font-weight: bold;
        transition: .4s;
    }

        .slider-text:before {
            content: attr(data-on);
        }

    input:checked + .slider .slider-text:before {
        content: attr(data-off);
    }

</style>
<script>
    var expanded = false;

    function showCheckboxes() {
        var checkboxes = document.getElementById("checkboxes");
        if (!expanded) {
            checkboxes.style.display = "block";
            expanded = true;
        } else {
            checkboxes.style.display = "none";
            expanded = false;
        }
    }
    function toggleSwitch() {
        var switchText = document.getElementById('switchText');
        var toggleSwitch = document.getElementById('toggleSwitch');

        if (toggleSwitch.checked) {
            switchText.innerText = 'Remover';
        } else {
            switchText.innerText = 'Adicionar';
        }
    }


</script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EscolaId" class="control-label">Escolas</label><br />
                <div class="multiselect">
                    <div class="selectBox" onclick="showCheckboxes()">
                        <select>
                            <option>Selecione...</option>
                        </select>
                        <div class="overSelect"> </div>
                    </div>
                    <div id="checkboxes" class="teste">
                        @foreach (var escola in ViewBag.Escolas)
                        {
                            <div class="form-check">
                                <label class="form-check-label" for="chk_@escola.Value">
                                    <input class="form-check-input" type="checkbox" name="EscolaId" value="@escola.Value" id="chk_@escola.Value" @(Model.EscolasSelecionadas != null && Model.EscolasSelecionadas.Split(',').Any(e => e == escola.Value.ToString()) ? "checked" : "")>



                                    @escola.Text
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Apelido" class="control-label"></label>
