    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2196F3;
    }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

    .slider-text {
        position: absolute;
        display: block;
        width: 60px;
        text-align: center;
        line-height: 34px;
        color: white;
        font-weight: bold;
        transition: .4s;
    }

        .slider-text:before {
            content: attr(data-on);
        }

    input:checked + .slider .slider-text:before {
        content: attr(data-off);
    }

